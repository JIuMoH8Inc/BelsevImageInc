<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.photos.PhotosFragment"
    android:paddingVertical="@dimen/small_top_margin">

    <com.example.picturegallery.ui.views.InfoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/empty_item" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/item_list"
            android:layout_gravity="center"
            android:paddingHorizontal="@dimen/top_margin"
            android:layout_weight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Button_16_blue_8"
            android:id="@+id/add_toAlbum"
            android:layout_marginBottom="24dp"
            android:layout_gravity="bottom"
            android:text="@string/add"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:visibility="gone"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_add"
        android:contentDescription="@string/add_text"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:layout_marginBottom="@dimen/horizontal_margin"
        android:src="@drawable/baseline_add_24"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/paging_load_back"
        android:visibility="gone"
        android:background="@color/transparent">

        <ProgressBar
            android:layout_width="@dimen/progress_bar_loading_size"
            android:layout_height="@dimen/progress_bar_loading_size"
            android:layout_gravity="center|bottom"
            android:indeterminateTint="@color/light_blue"
            android:layout_marginBottom="@dimen/horizontal_margin"/>
    </FrameLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>