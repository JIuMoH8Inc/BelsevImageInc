<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/small_top_margin"
    app:cardCornerRadius="@dimen/item_corner_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/photo_padding">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/photo_item_size"
            android:layout_height="@dimen/photo_item_size"
            android:id="@+id/photo_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/title_item"
            android:ellipsize="end"
            android:maxLines="1"
            style="@style/Text_Black_12"
            android:layout_marginTop="@dimen/top_margin"
            app:layout_constraintTop_toBottomOf="@id/photo_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/date_creation_item"
            style="@style/Text_Black_12"
            android:layout_marginTop="@dimen/small_top_margin"
            android:layout_marginStart="@dimen/small_top_margin"
            app:layout_constraintStart_toEndOf="@id/created_header"
            app:layout_constraintTop_toBottomOf="@id/title_item"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/created_header"
            style="@style/Text_12_Black_Bold"
            android:text="@string/created"
            android:layout_marginTop="@dimen/small_top_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_item"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
