<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/albumFragment">
    <fragment
        android:id="@+id/albumFragment"
        android:name="com.example.picturegallery.feature.albums.fragment.AlbumFragment"
        android:label="album_photo_fragment"
        tools:layout="@layout/list_item_fragment" />
    <fragment
        android:id="@+id/photosFragment"
        android:name="com.example.picturegallery.feature.photos.photo_list.PhotosFragment"
        android:label="photos_fragment"
        tools:layout="@layout/list_item_fragment" >
        <action
            android:id="@+id/action_photosFragment_to_viewPhotoFragment"
            app:destination="@id/viewPhotoFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewPhotoFragment"
        android:name="com.example.picturegallery.feature.photos.photo_view.ViewPhotoFragment"
        android:label="ViewPhotoFragment" />
</navigation>